<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kyrie.mapper.OrderMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.kyrie.pojo.Order">
        <id column="order_id" property="orderId"/>
        <result column="order_money" property="orderMoney"/>
        <result column="order_num" property="orderNum"/>
        <result column="sku" property="sku"/>
        <result column="country_id" property="countryId"/>
        <result column="date" property="date"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        order_id
        , order_money, order_num, product_id, country_id, date
    </sql>

    <sql id="Base_Column_Order">
        o
        .
        order_id
        order_id, o.order_money order_money, o.order_num order_num, o.order_state order_state,d.country country ,o.date ate,
            l.sku sku,l.asin asin,l.image_url url,l.product_id product_id,p.name name

    </sql>

    <resultMap id="orderByParams" type="com.kyrie.pojo.dto.OrderQueryDto">
        <id column="order_id" property="orderId"/>
        <result column="order_money" property="orderMoney"/>
        <result column="order_num" property="orderNum"/>
        <result column="order_state" property="orderState"/>
        <result column="country" property="country"/>
        <result column="date" property="date"/>

        <!--
            封装类中的属性对象
            property：是实体类（Order）中的属性名称（private String sku）
            javaType：当前实体中的属性的类型 LstBaseInfo
         -->
        <association property="sku" javaType="com.kyrie.pojo.LstBaseInfo">
            <id column="sku" property="sku" />
            <result column="asin" property="asin" />
            <result column="url" property="imageUrl" />
            <association property="productId" javaType="com.kyrie.pojo.ProductInfo">
                <result column="product_id" property="productId" />
                <result column="name" property="name" />
            </association>
        </association>
    </resultMap>


    <select id="selectOrderByParams" resultType="com.kyrie.pojo.dto.OrderQueryDto">
        select
        <include refid="Base_Column_Order"></include>
        from t_order o,t_lst_base_info l,t_pruduct_info p,t_dic_country d
        where o.lst_sku = l.sku
          and l.product_id = p.product_id
          and o.country_id = d.country_id
        and
    </select>


</mapper>
